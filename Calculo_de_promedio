/*************
Ingresar las notas de 10 alumnos y calcular el promedio

USO: prinf - scanf - for
*************/

#include <stdio.h>

int main()
{
    float nota,sumaNota=0,promedio;
    int i;
    for(i=1;i<=10;i++)
    {
        printf("Ingrese la nota del alumno %d: ",i);
        scanf("%f",&nota);
        sumaNota+=nota;
    }
    promedio = sumaNota/(i-1);
    printf("El promedio de las 10 notas es de %.2f",promedio);

    return 0;
}

