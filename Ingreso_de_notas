/*************
Ingresar una nota e inforamr si la nota es menor que 4 "Reprobado", entre 4 y 6 "Regular" y mayor que 6 "Promovido"

USO: prinf - scanf - if - else
*************/

#include <stdio.h>

int main()
{
    int nota;
    printf("Ingrese la nota del alumno: ");
    scanf("%d",&nota);
   
        if (nota<4)
        printf("Reprobado");
        else
        {
            if (4<nota&&nota<6)
            printf("Aprobado");
            else
            {
                if (6<nota&&nota<=10)
                printf("Promovido");
               
                else printf("Nota mal ingresada");
            }
        }
   
    return 0;
}
